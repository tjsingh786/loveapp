    <div class="swipe-popup hide" id="swipePopup"></div>

    <script>
        if (!localStorage.getItem('bumbleUser')) {
            window.location.href = '/login';
        }

        let profiles = <%- JSON.stringify(profiles) %>;
        let currentIndex = 0;
        let singleMatch = null;
        let currentChatId = null;
        let proposalSent = false;
        let storyUnlocked = localStorage.getItem('storyUnlocked') === 'true';

        const sampleMessages = [
            { sender: 'other', text: 'Hey! üòä' },
            { sender: 'own', text: 'Hi! How are you?' },
            { sender: 'other', text: 'I\'m doing great! üíï' },
            { sender: 'own', text: 'Tell me about yourself' },
            { sender: 'other', text: 'I love traveling and good conversations' },
            { sender: 'own', text: 'Me too! That\'s amazing' },
            { sender: 'other', text: 'We have so much in common üòÑ' },
            { sender: 'own', text: 'I know right! Can\'t stop smiling' }
        ];

        function logout() {
            localStorage.removeItem('bumbleUser');
            localStorage.removeItem('singleMatch');
            localStorage.removeItem('storyUnlocked');
            window.location.href = '/login';
        }

        function renderCard() {
            const stack = document.getElementById('cardStack');
            stack.innerHTML = '';

            if (currentIndex >= profiles.length) {
                stack.innerHTML = '<div class="no-more-message"><div style="font-size:32px;margin-bottom:12px">üíï</div><div>It\'s too late now üò¢</div></div>';
                return;
            }

            const profile = profiles[currentIndex];
            const card = document.createElement('div');
            card.className = 'card';
            card.id = 'mainCard';
            card.innerHTML = `
                <div class="card-image-section">
                    <img src="${profile.image}" alt="${profile.name}" class="card-image">
                    <div class="card-badges">
                        <div class="badge verified-badge">‚úì</div>
                    </div>
                    <div class="card-overlay">
                        <div class="card-name-tag">${profile.name}, ${profile.age}</div>
                        <div class="card-meta">
                            <span>üìç Your City</span>
                            <span>‚úì Verified</span>
                        </div>
                    </div>
                </div>
                <div class="card-details">
                    <div class="card-bio">${profile.bio}</div>
                    <div class="card-interests">
                        <span class="interest-tag">‚ù§Ô∏è Love</span>
                        <span class="interest-tag">üíë Us</span>
                        <span class="interest-tag">‚ú® Forever</span>
                    </div>
                </div>
            `;

            stack.appendChild(card);
            setupCardDrag(card);
        }

        function setupCardDrag(card) {
            let startX = 0;
            let currentX = 0;
            let isDragging = false;

            card.addEventListener('mousedown', (e) => {
                isDragging = true;
                startX = e.clientX;
            });

            card.addEventListener('touchstart', (e) => {
                isDragging = true;
                startX = e.touches[0].clientX;
            });

            document.addEventListener('mousemove', (e) => {
                if (!isDragging) return;
                currentX = e.clientX - startX;
                const angle = (currentX / window.innerWidth) * 20;
                card.style.transform = `translateX(${currentX}px) rotate(${angle}deg)`;
            });

            document.addEventListener('touchmove', (e) => {
                if (!isDragging) return;
                currentX = e.touches[0].clientX - startX;
                const angle = (currentX / window.innerWidth) * 20;
                card.style.transform = `translateX(${currentX}px) rotate(${angle}deg)`;
            });

            document.addEventListener('mouseup', () => {
                if (!isDragging) return;
                isDragging = false;
                
                if (Math.abs(currentX) > 100) {
                    if (currentX > 0) likeCard();
                    else passCard();
                } else {
                    card.style.transform = '';
                }
            });

            document.addEventListener('touchend', () => {
                if (!isDragging) return;
                isDragging = false;
                
                if (Math.abs(currentX) > 100) {
                    if (currentX > 0) likeCard();
                    else passCard();
                } else {
                    card.style.transform = '';
                }
            });
        }

        function passCard() {
            const card = document.getElementById('mainCard');
            if (!card) return;
            card.classList.add('swiped-left');
            setTimeout(() => {
                currentIndex++;
                renderCard();
            }, 600);
        }

        function likeCard() {
            const card = document.getElementById('mainCard');
            if (!card) return;
            
            if (!singleMatch) {
                const profile = profiles[currentIndex];
                singleMatch = {
                    id: 1,
                    name: 'Tajinder',
                    lastMessage: 'Say hi!',
                    timestamp: 'Now',
                    messages: []
                };
                localStorage.setItem('singleMatch', JSON.stringify(singleMatch));
                currentChatId = singleMatch.id;
            }
            
            document.getElementById('swipePopup').textContent = 'IT\'S A MATCH! üíõ';
            document.getElementById('swipePopup').classList.remove('hide');
            
            card.classList.add('swiped-right');
            setTimeout(() => {
                document.getElementById('swipePopup').classList.add('hide');
                currentIndex++;
                renderCard();
                renderChats();
            }, 1200);
        }

        function renderChats() {
            const list = document.getElementById('chatsList');
            if (!singleMatch) {
                list.innerHTML = '<li style="text-align:center;padding:20px;color:#999">No matches yet üíî</li>';
                return;
            }

            list.innerHTML = `
                <li class="chat-item" onclick="openChat(${singleMatch.id})">
                    <div class="chat-avatar"></div>
                    <div class="chat-info">
                        <div class="chat-name">${singleMatch.name}</div>
                        <div class="chat-preview">${singleMatch.lastMessage}</div>
                    </div>
                </li>
            `;
        }

        function switchNav(tab) {
            document.getElementById('discoverView').style.display = tab === 'discover' ? 'flex' : 'none';
            document.getElementById('chatsView').classList.toggle('active', tab === 'chats');
            document.getElementById('profileView').classList.toggle('active', tab === 'profile');
            document.getElementById('actionArea').style.display = tab === 'discover' ? 'flex' : 'none';

            document.querySelectorAll('.nav-icon').forEach(el => el.classList.remove('active'));
            event.target.classList.add('active');

            if (tab === 'chats') renderChats();
            if (tab === 'profile') updateProfileView();
        }

        function updateProfileView() {
            if (storyUnlocked) {
                document.getElementById('storyLocked').style.display = 'none';
                document.getElementById('storyUnlocked').classList.add('active');
            }
        }

        function openChat(matchId) {
            if (!singleMatch) return;

            currentChatId = matchId;
            document.getElementById('chatTitle').textContent = singleMatch.name;
            document.getElementById('chatInput').value = '';
            renderMessages();
            document.getElementById('chatDetail').classList.add('active');
        }

        function renderMessages() {
            const container = document.getElementById('messagesContainer');
            
            container.innerHTML = singleMatch.messages.map((msg, index) => {
                if (msg.type === 'animation') {
                    return `
                        <div class="message-animation">
                            <div class="animated-messages">
                                <div class="animated-messages-scroll" id="msgScroll${index}"></div>
                            </div>
                        </div>
                    `;
                } else if (msg.type === 'proposal_buttons') {
                    return `
                        <div style="display:flex;justify-content:center;margin-top:10px;gap:10px;">
                            <button class="yes-btn" style="padding:8px 16px;border-radius:20px;border:none;font-weight:600;cursor:pointer;background:#FF1493;color:white;" onclick="respondToProposal('yes')">Yes! üíç</button>
                            <button class="no-btn" style="padding:8px 16px;border-radius:20px;border:none;font-weight:600;cursor:pointer;background:#ccc;color:#333;" onclick="respondToProposal('no')">No</button>
                        </div>
                    `;
                } else {
                    return `
                        <div class="message ${msg.sender}">
                            <div class="message-bubble ${msg.proposal ? 'proposal' : ''}">${msg.text}</div>
                        </div>
                    `;
                }
            }).join('');

            singleMatch.messages.forEach((msg, index) => {
                if (msg.type === 'animation') {
                    const scrollDiv = document.getElementById(`msgScroll${index}`);
                    if (scrollDiv) {
                        scrollDiv.innerHTML = sampleMessages.map(m => `
                            <div class="sample-message ${m.sender}">${m.text}</div>
                        `).join('');
                    }
                }
            });
            
            container.scrollTop = container.scrollHeight;
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            
            if (!input.value.trim()) return;

            singleMatch.messages.push({
                sender: 'own',
                text: input.value
            });

            singleMatch.lastMessage = input.value;
            input.value = '';
            renderMessages();

            setTimeout(() => {
                let response = '';
                const ownCount = singleMatch.messages.filter(m => m.sender === 'own' && m.type !== 'animation').length;
                
                if (ownCount === 1) {
                    response = 'Hey! üòä How are you?';
                } else if (ownCount === 2) {
                    response = 'I\'m doing great! How about you? What do you do?';
                } else if (ownCount === 3) {
                    response = 'That\'s awesome! Do you want to meet at NSP? üòä';
                } else if (ownCount === 4) {
                    response = 'Great! I\'ll see you there! üíï';
                } else if (ownCount >= 5 && !proposalSent) {
                    proposalSent = true;
                    
                    singleMatch.messages.push({
                        type: 'animation'
                    });
                    renderMessages();
                    
                    setTimeout(() => {
                        singleMatch.messages.push({
                            sender: 'other',
                            text: 'Will You Marry Me? üíç',
                            proposal: true
                        });
                        singleMatch.messages.push({
                            type: 'proposal_buttons'
                        });
                        renderMessages();
                    }, 3500);
                    
                    localStorage.setItem('singleMatch', JSON.stringify(singleMatch));
                    return;
                }

                if (response) {
                    singleMatch.messages.push({
                        sender: 'other',
                        text: response
                    });
                    singleMatch.lastMessage = response;
                    renderMessages();
                }
            }, 800);

            localStorage.setItem('singleMatch', JSON.stringify(singleMatch));
        }

        function respondToProposal(response) {
            singleMatch.messages = singleMatch.messages.filter(m => m.type !== 'proposal_buttons');
            
            if (response === 'yes') {
                singleMatch.messages.push({
                    sender: 'other',
                    text: 'Yes! I will marry you! üíïüíç‚ú®',
                    proposal: true
                });
                
                storyUnlocked = true;
                localStorage.setItem('storyUnlocked', 'true');
                
                renderMessages();
                createConfetti();
                
                setTimeout(() => {
                    singleMatch.messages.push({
                        sender: 'other',
                        text: 'Jodi date niklwalo! üéâ'
                    });
                    renderMessages();
                    
                    setTimeout(() => {
                        closeChatDetail();
                        
                        document.getElementById('discoverView').style.display = 'none';
                        document.getElementById('chatsView').classList.remove('active');
                        document.getElementById('profileView').classList.add('active');
                        document.getElementById('actionArea').style.display = 'none';
                        
                        document.querySelectorAll('.nav-icon').forEach(el => el.classList.remove('active'));
                        document.querySelectorAll('.nav-icon')[2].classList.add('active');
                        
                        updateProfileView();
                    }, 1500);
                }, 800);
            } else {
                singleMatch.messages.push({
                    sender: 'other',
                    text: 'Okay, let\'s see where this goes üòä'
                });
                renderMessages();
            }
            
            localStorage.setItem('singleMatch', JSON.stringify(singleMatch));
        }

        function createConfetti() {
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.textContent = i % 3 === 0 ? 'üíï' : i % 3 === 1 ? '‚ú®' : 'üíç';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.top = '-10px';
                confetti.style.fontSize = Math.random() * 20 + 10 + 'px';
                confetti.style.opacity = 1;
                
                document.body.appendChild(confetti);
                
                const duration = Math.random() * 3 + 2;
                const xMove = (Math.random() - 0.5) * 200;
                
                confetti.animate([
                    { transform: 'translateY(0) translateX(0) rotate(0deg)', opacity: 1 },
                    { transform: `translateY(${window.innerHeight}px) translateX(${xMove}px) rotate(360deg)`, opacity: 0 }
                ], {
                    duration: duration * 1000,
                    easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
                }).onfinish = () => confetti.remove();
            }
        }

        document.getElementById('chatInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });

        function closeChatDetail() {
            document.getElementById('chatDetail').classList.remove('active');
        }

        // Load existing match
        const saved = localStorage.getItem('singleMatch');
        if (saved) {
            singleMatch = JSON.parse(saved);
            currentChatId = singleMatch.id;
        }

        renderCard();
        renderChats();
    </script>
</body>
